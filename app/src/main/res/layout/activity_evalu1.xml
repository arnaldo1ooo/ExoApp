<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arnal.exofpune.activity_evalu1">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:fontFamily="sans-serif-smallcaps"
        android:imeOptions="actionNext"
        android:text="Ingrese los Puntajes Obtenidos"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:typeface="serif"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp">

        <Spinner
            android:id="@+id/sp1"
            android:layout_width="80dp"
            android:layout_height="52dp"
            android:layout_alignBottom="@+id/textInputLayout6"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textInputLayout6"
            android:layout_toRightOf="@+id/textInputLayout6"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:spinnerMode="dialog"
            android:textAlignment="textStart"
            android:translationY="1dp"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="142dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout6"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/et1parcial"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvTitulo"
                android:layout_marginTop="32dp"
                android:hint="1ª Parcial"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18sp"
                android:translationX="0dp"
                android:translationY="1dp"
                android:translationZ="0dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="257dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvTotalText1"
            android:layout_width="174dp"
            android:layout_height="51dp"
            android:layout_alignBottom="@+id/sp1"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/sp1"
            android:layout_toRightOf="@+id/sp1"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0 de 15 Puntos"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="257dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvFeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:typeface="sans"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="97dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginTop="62dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout7"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textColorHint="#ffffff"
            android:layout_alignParentTop="true">

            <EditText
                android:id="@+id/et2parcial"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et1parcial"
                android:layout_marginTop="25dp"
                android:hint="2ª Parcial"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:textColorHint="#b8b8b8"
                android:textSize="18sp"
                android:translationY="1dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="338dp" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/textInputLayout7"
            android:layout_toRightOf="@+id/textInputLayout7"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:spinnerMode="dialog"
            android:textAlignment="textStart"
            android:translationY="1dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/tvTotalText2"
            android:layout_width="178dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/sp2"
            android:layout_toRightOf="@+id/sp2"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0 de 15 Puntos"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="354dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnCalculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/boton_borde_redondo"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="26sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_below="@+id/btnCalculo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="73dp">

        <TextView
            android:id="@+id/tvTotalText3"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sp3"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0 de 10 Puntos"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="407dp" />

        <Spinner
            android:id="@+id/sp3"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="98dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:spinnerMode="dialog"
            android:textAlignment="textStart"
            android:translationY="1dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="97dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout8"
            android:layout_width="102dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#ffffff">

            <EditText
                android:id="@+id/etTp"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sp2"
                android:layout_marginTop="21dp"
                android:layout_toLeftOf="@+id/sp3"
                android:layout_toStartOf="@+id/sp3"
                android:hint="Trabajo Práctico"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:textColorHint="#b8b8b8"
                android:textSize="18sp"
                android:translationY="1dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvFaltante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Te faltó 00.000 Puntos para Exonerar"
        android:textAlignment="center"
        android:textColor="#d20808"
        android:visibility="invisible"
        android:layout_alignTop="@+id/tvResultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
