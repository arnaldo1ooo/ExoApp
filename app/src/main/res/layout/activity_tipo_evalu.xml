<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    tools:context="com.example.arnal.exofpune.activity_tipo_evalu">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Seleccione el tipo de evaluaciÃ³n"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:typeface="serif" />

        <Button


            android:id="@+id/btnopc2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnopc1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:background="@drawable/boton_borde_redondo"
            android:soundEffectsEnabled="false"
            android:text="20 - 20"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnopc1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:background="@drawable/boton_borde_redondo"
            android:soundEffectsEnabled="false"
            android:text="15 - 15 -10"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnopc3"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnopc2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/boton_borde_redondo"
            android:text="Personalizado"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

