<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    android:verticalScrollbarPosition="defaultPosition">

    <RelativeLayout
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#3F51B5">

        <CheckBox
            android:id="@+id/cbMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="93dp"
            android:checked="false"
            android:text="MATERIA 1"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRequisitos"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="122dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="18dp"
            android:background="@android:color/transparent"
            android:text="Ver requisitos"
            android:textColor="#E91E63" />

        <Button
            android:id="@+id/btnAtaja"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="123dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/btnRequisitos"
            android:layout_toRightOf="@+id/btnRequisitos"
            android:background="@android:color/transparent"
            android:text="Ver que ataja"
            android:textColor="#E91E63" />

    </RelativeLayout>

</LinearLayout>