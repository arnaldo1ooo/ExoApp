<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arnal.exofpune.PrincipalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Ingrese los Puntajes Obtenidos"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnCalculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/boton_borde_redondo"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:layout_below="@+id/btnCalculo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et1parcial"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignLeft="@+id/tvTitulo"
            android:layout_alignStart="@+id/tvTitulo"
            android:layout_below="@+id/tvTitulo"
            android:layout_marginTop="32dp"
            android:hint="1ª Parcial"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textColorHint="#b8b8b8"
            android:textSize="25sp"
            android:translationY="1dp" />

        <EditText
            android:id="@+id/et2parcial"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignLeft="@+id/et1parcial"
            android:layout_alignStart="@+id/et1parcial"
            android:layout_below="@+id/et1parcial"
            android:layout_marginTop="19dp"
            android:hint="2ª Parcial"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textColorHint="#b8b8b8"
            android:textSize="25dp"
            android:translationY="1dp" />

        <EditText
            android:id="@+id/etTp"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tvTotalText3"
            android:hint="Trabajo P."
            android:inputType="numberDecimal"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textColorHint="#b8b8b8"
            android:textSize="25dp"
            android:translationY="1dp" />

        <Spinner
            android:id="@+id/sp1"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/et1parcial"
            android:layout_toEndOf="@+id/et1parcial"
            android:layout_toRightOf="@+id/et1parcial"
            android:nestedScrollingEnabled="false"
            android:spinnerMode="dialog"
            android:textAlignment="textStart"
            android:layout_above="@+id/et2parcial" />

        <TextView
            android:id="@+id/tvTotalText1"
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/sp1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sp1"
            android:layout_toRightOf="@+id/sp1"
            android:text="de 15 Puntos"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:translationY="12dp" />

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="95dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/et2parcial"
            android:layout_toEndOf="@+id/et2parcial"
            android:layout_toRightOf="@+id/et2parcial"
            android:nestedScrollingEnabled="false"
            android:spinnerMode="dialog"
            android:textAlignment="textStart"
            android:layout_alignBottom="@+id/et2parcial" />

        <TextView
            android:id="@+id/tvTotalText2"
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/et2parcial"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sp2"
            android:layout_toRightOf="@+id/sp1"
            android:text="de 15 Puntos"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:translationY="12dp" />

        <TextView
            android:id="@+id/tvTotalText3"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sp2"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/sp2"
            android:layout_toRightOf="@+id/sp2"
            android:text="de 10 Puntos"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:translationY="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvFeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/sp3"
        android:layout_width="95dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:spinnerMode="dialog"
        android:translationX="10dp"
        android:translationY="1dp" />
</RelativeLayout>
